<h2>News Posts</h2>
<%= link_to 'Create News Post', new_post_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Created At</th>
      <th colspan="2">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author_name %></td>
        <td><%= format_date post.created_at %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this alert?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
