<h2>News Posts</h2>
<%= link_to 'Create News Post', new_post_path %>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th colspan="2">&nbsp;</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this alert?' } %></td>
  <% end %>
</table>
