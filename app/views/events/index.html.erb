<h2>Events</h2>

<%= link_to 'Create New Event', new_event_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Challonge ID</th>
      <th>Starts At</th>
      <th>Ends At</th>
      <th colspan="2">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.challonge_id %></td>
        <td><%= format_date event.starts_at %></td>
        <td><%= format_date event.ends_at %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure you want to delete this alert?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
